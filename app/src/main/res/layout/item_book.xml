<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.airtel.data.entities.Item" />

        <variable
            name="itemClickListener"
            type="android.view.View.OnClickListener" />

        <variable
            name="resource"
            type="Integer" />

        <variable
            name="transitionName"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/coverCard"
            android:layout_width="108dp"
            android:layout_height="160dp"
            android:outlineAmbientShadowColor="@color/app_blue_dark"
            android:outlineSpotShadowColor="@color/app_blue_dark"
            app:cardCornerRadius="3dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onClickListener="@{itemClickListener}"
                android:transitionName="@{transitionName}"
                app:srcUrl="@{item.coverImage}"
                tools:src="@drawable/img_cover_5" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvBookName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:fontFamily="sans-serif-medium"
            android:lines="2"
            android:maxLines="2"
            android:text="@{item.title}"
            android:ellipsize="end"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/text_heading"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/coverCard"
            tools:text="@tools:sample/lorem" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
