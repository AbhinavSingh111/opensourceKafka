<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="text"
            type="String" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background_light"
        app:cardCornerRadius="2dp"
        app:cardElevation="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_medium_2"
            android:paddingTop="@dimen/spacing_regular"
            android:paddingEnd="@dimen/spacing_medium_2"
            android:paddingBottom="@dimen/spacing_regular"
            android:text="@{text}"
            android:textColor="@color/text_body_1"
            android:textSize="@dimen/text_regular" />
    </com.google.android.material.card.MaterialCardView>
</layout>

