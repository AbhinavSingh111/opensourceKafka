<resources>

    <style name="FrameTheme" parent="Theme.MaterialComponents.Light">
        <content name="colorPrimary">@color/colorPrimary</content>
        <content name="colorPrimaryDark">@color/colorPrimaryDark</content>
        <content name="colorAccent">@color/colorAccent</content>

        <content name="windowActionBar">false</content>
        <content name="windowNoTitle">true</content>
        <content name="windowActionBarOverlay">true</content>
        <content name="android:windowLightStatusBar">true</content>

        <content name="android:fontFamily">sans-serif</content>

        <!--<content name="android:fontFamily">@font/open_sans</content>-->

        <content name="textAppearanceHeadline1">@style/Headline5</content>
        <content name="textAppearanceHeadline2">@style/Headline4</content>
        <content name="textAppearanceBody1">@style/Body1</content>
        <content name="textAppearanceBody2">@style/Body2</content>

        <content name="android:textColorPrimary">@color/text_heading</content>
        <content name="android:textColorSecondary">@color/text_body_1</content>
        <content name="android:textColorHint">@color/text_body_2</content>
    </style>

    <style name="FrameTheme.ThemeTransitionAnimation">
        <content name="android:windowEnterAnimation">@anim/window_fade_in</content>
        <content name="android:windowExitAnimation">@anim/window_fade_out</content>
    </style>

    <style name="Headline5" parent="TextAppearance.MaterialComponents.Headline1">
        <content name="android:textColor">@color/text_heading</content>
        <content name="android:textStyle">bold</content>
        <content name="fontFamily">sans-serif-medium</content>
        <content name="android:textSize">32sp</content>
    </style>

    <style name="Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <content name="android:textColor">@color/text_heading</content>
        <content name="android:textStyle">normal</content>
        <content name="android:textSize">24sp</content>
    </style>

    <style name="Headline3" parent="TextAppearance.MaterialComponents.Headline4">
        <content name="android:textColor">@color/text_heading</content>
        <content name="android:textStyle">normal</content>
        <content name="android:textSize">20sp</content>
    </style>

    <style name="Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <content name="android:textColor">@color/text_heading</content>
        <content name="android:textStyle">normal</content>
        <content name="android:textSize">16sp</content>
    </style>

    <style name="Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <content name="android:textColor">@color/text_heading</content>
        <content name="android:textStyle">normal</content>
        <content name="android:textSize">14sp</content>
    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Body1">
        <content name="android:textColor">@color/text_body_1</content>
        <content name="android:textStyle">normal</content>
        <content name="android:textSize">14sp</content>
        <content name="android:lineSpacingExtra">2dp</content>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2">
        <content name="android:textColor">@color/text_body_2</content>
        <content name="android:textStyle">normal</content>
        <content name="android:textSize">16sp</content>
        <content name="android:lineSpacingExtra">4dp</content>
        <content name="fontFamily">sans-serif</content>
    </style>
</resources>
